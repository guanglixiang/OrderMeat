<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006400"
    android:orientation="vertical">
    <GridView
        android:id="@+id/waiter_display"
        android:layout_width="match_parent"
		android:layout_height="200dip"
		android:numColumns="auto_fit"
     	android:columnWidth="50dip"
		android:verticalSpacing="5dip"
		android:horizontalSpacing="10dip"
		android:stretchMode="columnWidth"
		android:padding="5dip"
		android:gravity="center"
		/>
    <TextView
        android:id="@+id/divisionline"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@id/waiter_display"
        android:background="#ffffff"
        />
    <GridView
	     android:id="@+id/orders_display"
	     android:layout_width="match_parent"
	     android:layout_height="150dip"
	     android:layout_alignParentLeft="true"
	     android:columnWidth="50dip"
	     android:gravity="center"
	     android:numColumns="auto_fit"
	     android:padding="5dip"
	     android:stretchMode="columnWidth"
	     android:layout_below="@id/divisionline"
	     android:horizontalSpacing="5dip"
	     android:verticalSpacing="10dip" >
 	</GridView>
    <LinearLayout
        android:id="@+id/operation_buttons"
       	android:layout_width="match_parent"
		android:layout_height="50dip"
		android:layout_below="@id/orders_display"
		android:orientation="horizontal">
		<Button
		    android:id="@+id/print_bt"
	       	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="打印"
			android:layout_weight="1"/>
		<Button
		    android:id="@+id/detail_bt"
	       	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="详情"
			android:layout_weight="1"/>
		<Button
		    android:id="@+id/back_bt"
	       	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="返回"
			android:layout_weight="1"/>
	</LinearLayout>
	   <include
       	android:id="@+id/bottom_buttons"
       	layout="@layout/bottom_buttons"
       	android:layout_alignParentBottom="true"
   		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	/>

	

</RelativeLayout>